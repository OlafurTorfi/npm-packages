{
  "$id": "https://shepherdorg.org/shepherd.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Shepherd metadata to describe a deployer or container deployed with shepherd.",
  "type": "object",
  "properties": {
    "displayName": {
      "type": "string"
    },
    "deployerRole": {
      "type": "string",
      "enum": [
        "infrastructure",
        "install",
        "migration"
      ]
    },
    "deployCommand": {
      "type": "string",
      "description": "Command to pass into a deployer for executing deployment script"
    },
    "rollbackCommand": {
      "type": "string",
      "description": "Command to pass into a deployer for executing rollback script"
    },
    "end2endTestCommand": {
      "type": "string",
      "description": "Command to pass into container for executing end2end tests after deployment. Failed tests result in rollback to last working version."
    },
    "migrationImage": {
      "type": "string"
    },
    "dockerRepository": {
      "type": "string",
      "description": "Docker repository part of docker tag, often referred to as image name. Does not include version information."
    },
    "dockerRegistry": {
      "type": "string",
      "description": "Docker registry portion of docker image tag. Not used if using dockerhub."
    },
    "dockerImageUrl": {
      "type": "string",
      "description": "Full docker image url. registry/repository/imageName:tag."
    },
    "preDeployTest": {
      "type": "object",
      "properties": {
        "imageUrl": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "environment": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "secret": {
                "type": "boolean"
              }
            }
          },
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      },
      "required": [
        "command"
      ],
      "additionalProperties": false
    },
    "postDeployTest": {
      "type": "object",
      "properties": {
        "imageUrl": {
          "type": "string"
        },
        "command": {
          "type": "string"
        },
        "environment": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "secret": {
                "type": "boolean"
              }
            }
          },
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          }
        }
      },
      "required": [
        "command"
      ]
    },
    "environment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "secret": {
            "type": "boolean"
          }
        }
      },
      "patternProperties": {
        "^.*$": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "hyperlinks": {
      "type": [
        "array"
      ],
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "pattern": "^https?://"
          }
        }
      }
    }
  },
  "required": [
    "displayName"
  ],
  "additionalProperties": false
}


